class Solution {
    public int maxAdjacentDistance(int[] nums) {

        int max = 0;
        for(int i = 0; i < nums.length-1; i++){

            int temp = Math.abs(nums[i] - nums[i+1]);
            if(temp > max) max = temp;
        }

        int temp = Math.abs(nums[0] - nums[nums.length-1]);

        if( temp > max ) max = temp;

        return max;
    }
}
